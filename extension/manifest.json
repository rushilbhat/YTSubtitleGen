{
    "manifest_version": 3,
    "name": "YTSubtitleGen",
    "version": "1.0",
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "https://*.youtube.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}